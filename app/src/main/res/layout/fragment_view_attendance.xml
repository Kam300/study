<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ViewAttendanceFragment">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выберите группу"
        android:textAlignment="center"
        />
    <Spinner
        android:id="@+id/spinner_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Выберите группу" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выберите номер пары"
        android:textAlignment="center"
        />
    <Spinner
        android:id="@+id/spinner_class_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Выберите номер пары" />

    <Button
        android:id="@+id/btn_load_attendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Загрузить Посещаемость" />

    <ListView
        android:id="@+id/list_view_attendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
